FROM python:3.12-slim

WORKDIR /app

# Install SSH, curl, and dependencies
RUN apt-get update && apt-get install -y --no-install-recommends openssh-client curl && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir pyyaml redis anthropic

# Copy app files
COPY responder.py mattermost_bridge.py ./
COPY .claude/ ./.claude/

CMD ["python", "responder.py"]
